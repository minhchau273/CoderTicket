coffee:
  seconds = undefined
  countdown = undefined

  redirect = ->
    document.location.href = "/"

  updateSeconds = ->
    $("#seconds").html(seconds)
    if seconds-- == 0
      clearInterval(countdown)
      redirect()

  countdownTimer = ->
    seconds = $("#seconds").html()
    countdown = setInterval(updateSeconds, 1000)

  $ -> countdownTimer()
